  },
  "homepage": "https://github.com/fox1t/typescript-lib-starter#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "husky": "^0.14.3",
    "jest": "23.5.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.14.2",
    "rimraf": "^2.6.2",
    "ts-jest": "23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
